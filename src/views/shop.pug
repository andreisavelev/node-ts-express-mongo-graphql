extends layouts/main-layout

block styles
    link(rel='stylesheet' href='/css/product.css')

block content
    main
        h1(style="text-align: center") My Products

        if products.length > 0
            div.grid
              each product in products
                  article.card.product-item
                      header.card__header
                          h1.product__title #{product.title}
                      figure.card__image
                          img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/knowledge-1052010_960_720.jpg" alt="A book picture")
                      div.card__content
                          p.product__price $19
                          p.product__description Awesome book about everything!
                      div.card__actions
                          button.btn Add to Cart
        else
            h2(style="text-align: center") No Products